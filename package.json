{
  "name": "hassio-proxy-worker",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy-with-migrations": "npm run db:migrate:remote && wrangler deploy",
    "db:generate": "drizzle-kit generate:sqlite --config ./drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote"
  },
  "dependencies": {
    "home-assistant-js-websocket": "^9.1.0",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.6"
  },
  "devDependencies": {
    "wrangler": "^3.60.0",
    "drizzle-kit": "^0.22.0",
    "better-sqlite3": "^11.1.1",
    "@types/node": "^20.14.2"
  }
}
